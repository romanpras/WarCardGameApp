<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WinnerActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/winner_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        >

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="19dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/winner_LBL_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp"
                android:text="The Winner"
                android:fontFamily="@font/font_thebomb"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/winner_IMG_cup"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:padding="4dp"
                android:src="@drawable/img_cup">

            </ImageView>

            <TextView
                android:id="@+id/winner_LBL_playerName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Player Name"
                android:fontFamily="@font/font_thebomb"
                android:textColor="@color/my_yellow_color"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/winner_IMG_cup2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:padding="4dp"
                android:src="@drawable/img_cup">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="4dp"
                android:text="With the score"
                android:fontFamily="@font/font_thebomb"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/winner_LBL_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="#FF9800"
                android:fontFamily="@font/font_thebomb"
                android:text="Score"
                android:padding="4dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="1dp"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/winner_BTN_topTen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Top 10"
                    android:backgroundTint="@color/my_yellow_color"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/font_thebomb"
                    >

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="1dp"
                >


                <Button
                    android:id="@+id/winner_BTN_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Close"
                    android:backgroundTint="@color/my_yellow_color"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/font_thebomb"
                    >

                </Button>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>