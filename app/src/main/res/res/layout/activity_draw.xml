<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DrawActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/draw_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        >

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="17dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/draw_LBL_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp"
                android:text="It is a draw"
                android:fontFamily="@font/font_thebomb"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/draw_IMG_boy"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:padding="4dp"
                android:src="@drawable/img_avatar_boy">

            </ImageView>


            <ImageView
                android:id="@+id/draw_IMG_girl"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:padding="4dp"
                android:src="@drawable/img_avatar_girl">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="4dp"
                android:text="With the score of"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/font_thebomb"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/draw_LBL_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:text="Score"
                android:fontFamily="@font/font_thebomb"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:padding="4dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/draw_BTN_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Close"
                    android:backgroundTint="@color/my_yellow_color"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/font_thebomb"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    >

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>